{
  "pipeline": {
    "name": "FileFilter"
  },
   "transform": {
    "image": "novella/my-openms:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/mrpo/*;",
    "do",
    "shortname=$(basename $filename)",
    "FileFilter -in ${filename} -out /pfs/out/${shortname}",
    "done"
    ]
  },
  "parallelism_spec": {
    "constant": 2
  },
  "resource_spec": {
    "memory": "1.2G",
    "cpu": 1.0
  },
  "input": {
    "atom": {
      "repo": "mrpo",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "5m"
}